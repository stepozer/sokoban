<ol class="breadcrumb">
  <li><%= link_to 'Play', play_index_path %></li>
  <li class="active"><%= @level_pack.name %></li>
</ol>

<div class="row">
  <div class="col-lg-12">
    <h4><%= @level_pack.name %></h4>
    <hr/>
    <table class="table table-borderless">
      <tbody>
        <% @levels.each do |level| %>
          <tr>
            <td>
              <%= image_tag("levels/thinking-rabbit-original/1.png") %>
            </td>
            <td style="text-align:left;vertical-align:middle;">
              <%= link_to play_show_path(pack: level.level_pack.slug, level: level.name) do %>
                <%=level.name%>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>