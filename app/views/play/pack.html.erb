<ol class="breadcrumb">
  <li><%= link_to 'Play', play_index_path %></li>
  <li class="active"><%= @level_pack.author %> - <%= @level_pack.name %></li>
</ol>

<div class="row">
  <div class="col-lg-12">
    <h4><%= @level_pack.author %> - <%= @level_pack.name %></h4>
    <hr/>
    <table class="table table-striped table-hover table-borderless">
      <tbody>
        <% @levels.each do |level| %>
          <tr>
            <td>
              <%= link_to play_show_path(pack: level.level_pack_id, level: level.id) do %>
                <%=level.id%>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>