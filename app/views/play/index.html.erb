<div class="row">
  <div class="col-lg-12">
    <h4>Official Puzzle Packs</h4>
    <hr/>
    <table class="table table-striped table-hover table-borderless">
      <tbody>
        <% @level_packs.each do |level_pack| %>
          <tr>
            <td>
              <%= link_to level_pack.name, play_show_pack_path(pack: level_pack.slug)  %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>