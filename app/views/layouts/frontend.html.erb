<!DOCTYPE html>
<html>
<head>
  <title>Sokoban</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= include_gon %>
  <div class="container">
    <div class="header clearfix">
      <nav>
        <ul class="nav nav-pills pull-right">
          <li role="presentation" class="<%= 'active' if params[:action] == 'home' %>">
            <%= link_to 'Home', root_path %>
          </li>
          <li role="presentation" class="<%= 'active' if params[:action] == 'play' %>">
            <%= link_to 'Play', play_index_path %>
          </li>
          <li role="presentation" class="<%= 'active' if params[:action] == 'help' %>">
            <%= link_to 'Help', pages_help_path %>
          </li>
        </ul>
      </nav>
      <h3 class="text-muted">
        <i class="fa fa-gamepad"></i> Sokoban Online
     </h3>
    </div>
    <div class="content">
      <%= yield %>
    </div>
    <footer class="footer">
      <p>&copy; <%= Time.now.year %> Play Sokoban Online.</p>
    </footer>
  </div>
</body>
</html>
